<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tomato"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:src="@drawable/ic_check_outline" />

    <TextView
        android:id="@+id/txtSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSuccess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Your order has been successfully placed!"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnViewOrderHistory"
        android:layout_marginBottom="8dp"
        android:text="Ok"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnViewOrderHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="View order history"
        android:layout_centerHorizontal="true" />

</RelativeLayout>